    </servlet>
    <servlet>
        <servlet-name>SignOutServlet</servlet-name>
        <servlet-class>web.SignOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HelpFormServlet</servlet-name>
        <servlet-class>web.HelpFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserInforServlet</servlet-name>
