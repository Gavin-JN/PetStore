        <filter-name>AddItemFilter</filter-name>
        <servlet-name>AddItemToCartServlet</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>CartFormFilter</filter-name>
        <filter-class>web.Filter.CartFormFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CartFormFilter</filter-name>
        <servlet-name>CartFormServlet</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>CategoryFilter</filter-name>
        <filter-class>web.Filter.CategoryFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CategoryFilter</filter-name>
        <servlet-name>CategoryFormServlet</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>HelpFilter</filter-name>
        <filter-class>web.Filter.HelpFilter</filter-class>
    </filter>
