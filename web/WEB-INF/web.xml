        <servlet-name>UpdateUserInforServlet</servlet-name>
        <servlet-class>web.UpdateUserInforServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>web.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ifUserNameExitedServlet</servlet-name>
